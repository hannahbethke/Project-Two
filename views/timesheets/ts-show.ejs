<article class="panel">
  <p class="panel-heading">
    My Timesheets
  </p>
  <div class="box">
    <table class="table is-striped is-narrow is-hoverable is is-fullwidth">  
      <thead>
          <td><strong>Timesheet Entry: <%= foundTimesheet.date %></strong></td>
          <td></td>
      </thead>
        <tr>
          <td>Date: <%= foundTimesheet.date %></td>
        </tr>
      <tr>
          <td>Start Time: <%= foundTimesheet.startTime %></td>
      </tr>
      <tr>
          <td>End Time: <%= foundTimesheet.endTime %></td>
      </tr>
      <tr>
          <td>Location: <%= foundTimesheet.location %></td>
      </tr>
      <tr>
          <td>Notes: <%= foundTimesheet.notes %></td>
      </tr>
    </table>
