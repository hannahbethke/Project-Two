        <a class="button" href="/timesheets/<%= foundTimesheet._id%>/edit" style="margin-inline: 20px;">Edit timesheet</a>
        <form action="/timesheets/<%= foundTimesheet._id %>?_method=DELETE" method="POST">
          <input class="button" type="submit" value="Delete Timesheet">
        </form>
      </div>
    </div>
  </div>
