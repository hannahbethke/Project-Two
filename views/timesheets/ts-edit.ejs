<article class="panel">
  <p class="panel-heading">
    Edit Timesheet
  </p>
<div class="box">
  <form action="/timesheets/<%= editTimesheet._id %>?_method=PUT" method="POST">
    <table class="table is-striped is-narrow is-hoverable is-fullwidth"> 
      <thead>
        <td><strong style="font-size: 20px;">Timesheet Entry: <strong><%= editTimesheet.date.toDateString() %></td>
      </thead>
      <tr>
        <td><strong>Date: </strong><br><input type="date" name="date" value = "<%= editTimesheet.date.toDateString() %>" required="true"></td>
      </tr>
      <tr>
        <td><strong>AM Start Time: </strong><br><input type="text" name="startTime" value= "<%= editTimesheet.startTime %>"></td>
      </tr>
      <tr>
        <td><strong>Lunch Break Start: </strong><br><input type="text" name="lunchStart" value= "<%= editTimesheet.lunchStart %>"></td>
      </tr>
      <tr>
        <td><strong>Lunch Break End: </strong><br><input type="text" name="lunchEnd" value= "<%= editTimesheet.lunchEnd %>"></td>
      </tr>
      <tr>
        <td><strong>PM End Time: </strong><br><input type="text" name = "endTime" value= "<%= editTimesheet.endTime %>"></td>
      </tr>
      <tr>
        <td><strong>Project Location: </strong><br><input type="text" name="location" value= "<%= editTimesheet.location %>"></td>
      </tr>
      <tr>
        <td><strong>Client Notes: </strong><br><textarea type="text" name="notes" id="notes" cols="30" rows="10" placeholder= "<%= editTimesheet.notes %>"></textarea></td>
      </tr>
    </table>
      <div class="level-item" style="justify-content: left;">
        <input class="button is-primary" type="submit" value="Save Changes" style="margin-inline: 10px;">
        <a class="button is-light" href="/timesheets/<%= editTimesheet._id%>">Cancel</a>
      </div>
    </form>
  </div>

  <script>
    const toggleBurger = () => {
      let burgerIcon = document.getElementById('burger');
      let dropMenu = document.getElementById('navItems');
      burgerIcon.classList.toggle('is-active');
      dropMenu.classList.toggle('is-active');
    };
    </script>

