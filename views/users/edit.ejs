<section class="hero is-fullheight" style="background-image: url('/public/assets/home-img.jpg'); background-size: cover; background-repeat: no-repeat;">
  <div class="body" style="padding: 100px;">
    <div class="container" style="background-color: white; padding: 20px">
      <h1><strong>Profile Information:</strong></h1>
      <br>
      <div class="box">
          <form action="/users/profile?_method=PUT" method="POST">
            <div class="field">

              <label class="label" for="name">Name</label>
              <div class="control">
                <input class="input" type="text" name="name" placeholder="<%= user.name %>" autofocus required>
              </div>
  
              <label class="label" for="phone">Phone Number</label>
              <div class="control">
                <input class="input" type="tel" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="<%= user.phone %>">
              </div>
  
              <label class="label" for="email">Email</label>
              <div class="control">
                  <input class="input" type="email" name="email" placeholder="<%= user.email %>" required="true">
              </div>
  
              <label class="label" for="password">Password- minimum of 8 characters</label>
              <div class="control">
                <input class="input" type="password" name="password" placeholder="select password">
              </div> 
              <br>
  
              <input class="button is-primary" type="submit" value="Update Profile">
            </div>
          </form>

<form action="/users/profile?_method=DELETE" method="POST">
  <label class="label has-text-centered" for="delete-profile">
        <input class="button is-light" type="submit" id="delete-profile" value="Delete Profile">
    </label>
    <div class="has-text-centered">
      <p style="color: red; margin-bottom: 1rem;">CAUTION! CANNOT BE UNDONE!</p>
      <label for="confirm">
        Are you sure? Check box to confirm.
        <input type="checkbox" name="confirm" id="confirm" required>
      </label>
    </div>
</form>